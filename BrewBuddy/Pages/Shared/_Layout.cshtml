<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BrewBuddy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BrewBuddy.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-saddlebrown bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">BrewBuddy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-saddlebrown" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-saddlebrown" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-saddlebrown" asp-area="" asp-page="/Machines/CoffieMachines">Coffie Machines</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-saddlebrown" asp-area="" asp-page="/Users">Brugere</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-saddlebrown" asp-area="" asp-page="/Assignments/Assignments">Opgaver</a>
                        </li>
                    </ul>
                </div>
                 
                @if (User.Identity.IsAuthenticated)
                {
                    <form method="post" class="form-inline" asp-page="/Account/LogOut">
                        Welcome @User.Identity.Name
                        <button type="submit" class="ml-2 btn btn-link">LogOut</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-link" asp-page="/Account/LogIn">LogIn</a>
                }

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-saddlebrown">
        <div class="container">
            &copy; 2024 - BrewBuddy - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>