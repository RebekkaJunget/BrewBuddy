            </div>
            <div class="form-group">
                <span class="text-danger"></span>
                <label asp-for="UpdateUser.PhoneNumber" class="control-label"></label>
                <input asp-for="UpdateUser.PhoneNumber" class="form-control" />
                <span asp-validation-for="UpdateUser.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger"></span>
                <label asp-for="UpdateUser.Role" class="control-label"></label>
                <input asp-for="UpdateUser.Role" class="form-control" />
