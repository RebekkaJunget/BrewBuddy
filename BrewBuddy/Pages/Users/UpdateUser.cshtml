@page "{Id:int?}"
@model BrewBuddy.Pages.Users.UpdateUserModel

@{
    ViewData["Title"] = "Update";
}

<hr class="my-5" />
<h2 class="mb-4 text-center"><strong>Redigering af bruger</strong></h2>
<hr />
